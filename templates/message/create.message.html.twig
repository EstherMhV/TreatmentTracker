{% extends 'base.html.twig' %}

{% block title %}Créer un message{% endblock %}

{% block body %}


<div class="container">
    <section class="row justify-content-center mt-5">
        <div class="col-md-6 text-center">

            <h2>Créer un message</h2>
            
            {{ form_start(form, {'attr': {'class': 'mt-4'}}) }}
                {% for field in form %}
                {% if field.vars.name != '_token' %}
                    <div class="form-group mb-4">
                        {{ form_label(field) }}
                        {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(field) }}
                    </div>
                {% endif %}
                {% endfor %}
                <button type="submit" class="button d-block mx-auto">Créer</button>
            {{ form_end(form) }}
            
        </div>
    </section>
</div>
{% endblock %}
