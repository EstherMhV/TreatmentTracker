{% extends 'base.html.twig' %}

{% block title %}Modifier une VM{% endblock %}

{% block body %}

    <div class="container">
        <section class="row justify-content-center">
            <div class="col-md-6 text-center col-form-label">

                <h2>Modifier une VM</h2>

                {{ form_start(form, {'attr': {'class': 'd-inline-block mt-4 col-form-label'}}) }}
                    {{ form_widget(form) }}
                    <button type="submit"  class="button" onclick="return confirmModify();">Modifier</button>
                {{ form_end(form) }}
            </div>
        </section>
    </div>

    <script>
        function confirmModify() {
            return confirm("Êtes-vous sûr de vouloir modifier cette VM ?");
        }
    </script>
{% endblock %}
