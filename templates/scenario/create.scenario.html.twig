{% extends 'base.html.twig' %}

{% block title %}Créer un scénario{% endblock %}

{% block body %}


    <div class="container">
        <section class="row justify-content-center">
            <div class="col-md-6 text-center col-form-label"> 

                <h2>Créer un scenario</h2>

                {{ form_start(form, {'attr': {'class': 'd-inline-block mt-4 col-form-label'}}) }}
                    {{ form_widget(form) }}
                    <button type="submit" class="button" onclick="return confirmCreate();">Créer</button>
                {{ form_end(form) }}
            </div>
        </section>
    </div>

    <div class="modal fade" id="duplicateScenarioModal" tabindex="-1" aria-labelledby="duplicateScenarioModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="duplicateScenarioModalLabel">Error</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Ce scénario existe déja.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    {% if app.flashes('scenario_duplicate') %}
        <script>
            document.addEventListener("DOMContentLoaded", function(event) {
                var duplicateScenarioModal = new bootstrap.Modal(document.getElementById('duplicateScenarioModal'));
                duplicateScenarioModal.show();
            });
        </script>
    {% endif %}   

    <script>
        function confirmCreate() {
            return confirm("Êtes-vous sûr de vouloir créer ce scénario ?");
        }
    </script>
        </div>
    </section>
</div>
{% endblock %}
